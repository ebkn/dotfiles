[core]
	excludesfile = ~/.gitignore_global
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[gpg]
	program = gpg

[commit]
	gpgsign = true

[fetch]
	prune = true

[apply]
	whitespace = nowarn

[log]
	date = short

[color]
	ui = true
	branch = auto
	diff = auto
	status = auto
	showbranch = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
