{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2017",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "types": ["webpack-env"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "removeComments": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
